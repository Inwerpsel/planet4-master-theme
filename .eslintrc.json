{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true,
        "amd":true
    },
    "extends": "eslint:recommended",
    "globals": {
        "wp": "readonly"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "curly": [
            "error",
            "all"
        ],
        "one-var-declaration-per-line": [
            "error",
            "always"
        ],
        "new-cap": "error",
        "no-var": 1,
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    },
    "parserOptions": {
      "ecmaVersion": 9,
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      },
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ]
}
